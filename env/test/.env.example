# Test/Staging Environment
# This file is a template for test environment variables
# Actual secrets should be stored in CI/CD secrets or secret management system

# Application
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Build Metadata (auto-injected during build)
VERSION=
ENVIRONMENT=test

# Database
# DATABASE_URL=postgresql://test-host:5432/myapp_test
# DATABASE_POOL_MIN=5
# DATABASE_POOL_MAX=30
# DATABASE_SSL=true
# DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Redis
# REDIS_URL=redis://test-host:6379
# REDIS_PREFIX=myapp:test:
# REDIS_TLS_ENABLED=true

# External Services
# API_BASE_URL=https://api-test.example.com
# API_TIMEOUT=30000
# API_KEY=
# API_RETRY_ATTEMPTS=3

# Security (use secret management in actual deployment)
# JWT_SECRET=
# SESSION_SECRET=
# ENCRYPTION_KEY=

# Monitoring & Logging
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=test
# DATADOG_API_KEY=
# LOG_AGGREGATOR_URL=
# TRACE_SAMPLE_RATE=0.5

# Feature Flags
# FEATURE_JOBS_ENABLED=true
# FEATURE_DEBUG_MODE=false
# FEATURE_EXPERIMENTAL=true

# Rate Limiting
# RATE_LIMIT_WINDOW=60000
# RATE_LIMIT_MAX_REQUESTS=100
