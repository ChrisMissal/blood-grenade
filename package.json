{
  "name": "__PROJECT_NAME__",
  "version": "1.0.0",
  "private": true,
  "description": "Template monorepo with automated release pipeline",
  "type": "module",
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "cli",
    "cli/apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "depcheck": "node scripts/depcheck.js",
    "commitlint": "node scripts/commitlint.js",
    "test": "npm run test --workspaces",
    "typecheck": "node scripts/typecheck.js && npm run typecheck --workspaces",
    "package": "npm run package --workspaces",
    "version": "npm run version --workspaces",
    "tag": "npm run tag --workspaces",
    "ep": "node cli/src/cli.js",
    "depcruise": "depcruise apps packages",
    "depcruise:graph": "depcruise apps packages --output-type dot | dot -T svg > dependency-graph.svg",
    "depcruise:graph:archi": "depcruise apps packages --output-type archi | dot -T svg > architecture.svg",
    "check:apps": "node scripts/check-app-structure.js"
  },
  "keywords": [
    "monorepo",
    "release-pipeline",
    "semantic-release",
    "conventional-commits"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/__PROJECT_NAME__/__PROJECT_NAME__.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^17.3.8",
    "semantic-release": "^25.0.3",
    "typescript": "^5.7.3"
  }
}
