{
  "name": "__PROJECT_NAME__",
  "version": "1.0.0",
  "private": true,
  "description": "Template monorepo with automated release pipeline",
  "type": "module",
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "repo": "node apps/cli/dist/index.js",
    "build": "npm run repo -- build",
    "test": "npx jest --config tests/jest.config.js",
    "typecheck": "npm run repo -- typecheck",
    "package": "npm run repo -- package",
    "version": "npm run repo -- version",
    "tag": "npm run repo -- tag",
    "depcruise": "npm run repo -- depcruise",
    "doctor": "npm run repo -- doctor",
    "commitlint": "node scripts/commitlint.js",
    "depcheck": "node scripts/depcheck.js",
    "check:apps": "node scripts/check-app-structure.js"
  },
  "keywords": [
