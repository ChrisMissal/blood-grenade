{
  "name": "__PROJECT_NAME__",
  "version": "1.0.0",
  "private": true,
  "description": "Template monorepo with automated release pipeline",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "depcheck": "npm run depcheck --workspaces",
    "lint": "node scripts/commitlint.js",
    "test": "npm run test --workspaces",
    "typecheck": "node scripts/typecheck.js && npm run typecheck --workspaces",
    "package": "npm run package --workspaces",
    "version": "npm run version --workspaces",
    "tag": "npm run tag --workspaces",
    "depcruise": "depcruise apps packages",
    "depcruise:graph": "depcruise apps packages --output-type dot | dot -T svg > dependency-graph.svg",
    "depcruise:graph:archi": "depcruise apps packages --output-type archi | dot -T svg > architecture.svg"
  },
  "keywords": [
    "monorepo",
    "release-pipeline",
    "semantic-release",
    "conventional-commits"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/__PROJECT_NAME__/__PROJECT_NAME__.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^17.3.8",
    "typescript": "^5.7.3"
  }
}
