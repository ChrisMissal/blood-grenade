{
  "name": "archetype-auditor",
  "version": "0.1.0",
  "description": "CLI tool to audit TypeScript types across architectural layers.",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "main": "dist/archetypeAuditor.js",
  "bin": {
    "archetype-auditor": "dist/archetypeAuditor.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "ts-node src/archetypeAuditor.ts",
    "audit": "ts-node src/archetypeAuditor.ts --config config/archetype-auditor.config.json --output report.md"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
